<p id="notice"><%= notice %></p>

<h1>Listing Tenants</h1>

<table>
  <thead>
    <tr>
      <th>Tenent name</th>
      <th>From</th>
      <th>To</th>
      <th>Amount paid</th>
      <th>Balance</th>
      <th>Total</th>
      <th>Landlord</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.tenent_name %></td>
        <td><%= tenant.from %></td>
        <td><%= tenant.to %></td>
        <td><%= tenant.amount_paid %></td>
        <td><%= tenant.balance %></td>
        <td><%= tenant.total %></td>
        <td><%= tenant.landlord %></td>
        <small> Landlord: <%=tenant.landlord.firstname if tenant.landlord %> <%=tenant.landlord.lastname if tenant.landlord %> </small>
        <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

