
<h1> List of all Landlords </h1>

<p>
  <%= link_to "Create New Landlord", new_landlord_path %> 
</p>
<table>
  <tr>
    <th>FirstName</th>
    <th>LastName</th>
    <th>Address</th>
    <th>Phone Number</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @landlords.each do |landlord| %>
  <tr>
    <td> <%= landlord.firstname %> </td>
    <td> <%= landlord.lastname %> </td>
    <td> <%= landlord.address %> </td>
    <td> <%= landlord.phone %> </td>
    <td> <%= link_to "Edit", edit_landlord_path(landlord) %> </td>
    <td> <%= link_to "Show", landlord_path(landlord) %> </td>
    <td> <%= link_to "Delete", landlord, method: :delete, data: {confirm: "Are you sure?"} %> </td>

  </tr>
  <% end %>

</table>

